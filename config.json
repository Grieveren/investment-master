{
    "api": {
        "sws_api_url": "https://api.simplywall.st/graphql",
        "portfolio_file": "combined_portfolio.md"
    },
    "retry": {
        "max_retries": 3,
        "retry_base_delay": 2,
        "retry_max_delay": 10
    },
    "openai": {
        "model": "o3-mini",
        "reasoning_effort": "high"
    },
    "claude": {
        "model": "claude-3-7-sonnet-20250219",
        "thinking_budget": 16000
    },
    "output": {
        "raw_data_file": "data/raw/api_data.json",
        "analysis_file": "data/processed/portfolio_analysis.md",
        "companies_dir": "data/processed/companies",
        "optimization_file": "data/processed/portfolio_optimization.md",
        "claude_optimization_file": "data/processed/claude_portfolio_optimization.md"
    },
    "portfolio": {
        "csv_file": "data/source/combined_portfolio.csv",
        "optimization": {
            "buy_boost_factor": 1.5,
            "sell_reduction_factor": 0.5
        },
        "claude_optimization": {
            "max_tokens": 4000,
            "temperature": 0.1,
            "include_strengths_weaknesses": true
        }
    }
} 